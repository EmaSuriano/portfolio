<script lang="ts">
  import DataTable, { Head, Body, Row, Cell } from '@smui/data-table';
  import type { Product } from 'types';

  import { hiddenCategories } from 'utils/state';
  import { humanize } from 'utils/string';

  // 1. Received products from props
