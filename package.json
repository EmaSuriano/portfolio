{
  "private": true,
  "name": "portfolio",
  "version": "1.0.0",
  "author": "Ema Suriano",
  "scripts": {
    "create-summary": "ts-node utils/create-summary.ts",
    "writer": "ts-node utils/writer.ts",
    "writer:watch": "ts-node utils/writer.ts --watch",
    "start": "yarn dev",
    "png-to-jpg": "ls -1 ./content/**/*.png | xargs -n 1 bash -c 'convert \"$0\" \"${0%.png}.jpg\"'",
    "optimize-images": "imageoptim './content/**/*.jpg'",
    "lint": "eslint --cache --ext .ts,.tsx src",
    "check-types": "tsc -p . --noEmit",
    "dev": "astro dev",
    "build": "astro build",
    "check": "astro check",
    "preview": "pnpm build && astro preview"
  },
  "devDependencies": {
    "@astrojs/image": "^0.3.6",
    "@astrojs/markdown-remark": "^1.0.0",
    "@astrojs/mdx": "^0.10.1",
    "@astrojs/rss": "^1.0.0",
    "@astrojs/sitemap": "^1.0.0",
    "@astrojs/tailwind": "^1.0.0",
    "@tailwindcss/typography": "^0.5.4",
    "@types/glob": "^8.0.0",
    "astro": "1.0.9",
    "astro-compress": "^1.0.5",
    "cloudflare": "^2.9.1",
    "date-fns": "^2.29.2",
    "glob": "^8.0.3",
    "image-size": "^1.0.2",
    "prettier": "^2.7.1",
    "prettier-plugin-astro": "^0.5.4",
    "reading-time": "^1.5.0",
    "rehype-autolink-headings": "^6.1.1",
    "rehype-code-titles": "^1.1.0",
    "rehype-prism": "^2.1.3",
    "rehype-slug": "^5.0.1",
    "sharp": "^0.30.7",
    "tailwindcss": "^3.1.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint --fix"
    }
  },
  "dependencies": {
    "astro-icon": "^0.7.3",
    "zod": "^3.18.0"
  }
}
