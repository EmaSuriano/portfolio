---
import Link from 'components/Link.astro';
import Title from 'components/Title.astro';
import Layout from 'layouts/Layout.astro';
import about from '../author.json';

const title = `${about.name} - ${about.role}`;
---

<Layout title={title}>
  <article class="my-auto pb-8">
    <div class="mb-3 flex flex-col-reverse sm:flex-row">
      <Title name={about.name} />

      <div
        class="first:h-width mb-2 h-10 w-10 overflow-hidden rounded-full transition-all duration-200 first:w-full sm:-mt-10 sm:h-16 sm:w-16 sm:hover:scale-125"
        data-zoomable
      >
        <!-- Do not use Img here because Gravatar already does this convertion  -->
        <img src={`${about.avatar}?s=128`} alt={about.name} />
      </div>
    </div>

    <p
      class="transition-color text-md block w-[80%] font-medium text-slate-400 duration-200 hover:text-slate-600 dark:hover:text-slate-200 sm:text-xl sm:leading-relaxed md:w-[85%]"
    >
      I'm a {about.role} at
      <Link href={about.company.url}>{about.company.name}</Link>
    </p>

    <p
      class="transition-color text-md block w-[80%] font-medium text-slate-400 duration-200 hover:text-slate-600 dark:hover:text-slate-200 sm:text-xl sm:leading-relaxed md:w-[85%]"
    >
      I contribute to <Link href="/about#projects">open-source</Link>, and
      <Link href="/blog">write</Link> about web development.
    </p>
  </article>
</Layout>
