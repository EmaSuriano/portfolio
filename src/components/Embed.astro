---
type Props = {
  href: string;
};

const { href } = Astro.props;
---

<div class="flex flex-col justify-center items-center">
  <blockquote class="twitter-tweet">
    <a href={href}></a>
  </blockquote>
  <slot />
</div>

<script async src="https://platform.twitter.com/widgets.js" charset="utf-8"
></script>
